<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu"
    tools:context=".MainMenu" >

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="300dp"
        android:layout_height="410dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="465dp"
        android:orientation="vertical"
        tools:ignore="UselessParent" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="onNewGame"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_newgame" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:onClick="onTutorial"
            android:src="@drawable/btn_tutorial" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:onClick="onScores"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_scores" />

<!--         <ImageButton -->
<!--             android:id="@+id/imageButton4" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_marginTop="10dp" -->
<!--             android:background="@drawable/btnbground" -->
<!--             android:onClick="onCredits" -->
<!--             android:src="@drawable/credits" /> -->

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:onClick="onQuit"
            android:scaleType="fitXY"
            android:src="@drawable/btn_quit" />

    </LinearLayout>

</RelativeLayout>