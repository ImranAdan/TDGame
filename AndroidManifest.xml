<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qmul.tdgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.SplashScreen"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainMenu"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".view.Tutorial"
            android:label="@string/title_activity_tutorial"
            android:parentActivityName="com.qmul.tdgame.MainMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qmul.tdgame.MainMenu" />
        </activity>
        <activity
            android:name=".view.PlayerDetails"
            android:label="@string/title_activity_player_details"
            android:parentActivityName="com.qmul.tdgame.MainMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qmul.tdgame.MainMenu" />
        </activity>
        <activity
            android:name=".view.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name=".view.GameOver"
            android:label="@string/title_activity_game_over" >
        </activity>
        <activity
            android:name=".view.Scores"
            android:label="@string/title_activity_scores" >
        </activity>
        <activity
            android:name=".view.WalkThrough"
            android:label="@string/title_activity_walk_through" >
        </activity>
    </application>

</manifest>